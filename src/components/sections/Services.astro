    "@type": "ItemList",
    name: "Total Sports Group Services",
    description:
      "Comprehensive sports services including experiences, tourism, talent development, travel management, event creation, and consulting",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        item: {
          "@type": "Service",
          name: "Sports Experiences",
          description:
            "Tailored football experiences and programs for teams and academies",
          provider: {
            "@type": "Organization",
            name: "Total Sports Group",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 2,
        item: {
          "@type": "Service",
          name: "Sports Tourism",
          description: "International sports travel and cultural experiences",
          provider: {
            "@type": "Organization",
            name: "Total Sports Group",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 3,
        item: {
          "@type": "Service",
          name: "Talent Development",
          description: "Professional athlete development and training programs",
          provider: {
            "@type": "Organization",
            name: "Total Sports Group",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 4,
        item: {
          "@type": "Service",
          name: "Travel Management",
          description: "Professional sports travel coordination and logistics",
          provider: {
            "@type": "Organization",
            name: "Total Sports Group",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 5,
        item: {
          "@type": "Service",
          name: "Event Creation & Management",
          description:
            "Professional sports event creation and management services",
          provider: {
            "@type": "Organization",
            name: "Total Sports Group",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 6,
        item: {
          "@type": "Service",
          name: "Sports Consulting",
          description:
            "Strategic consulting for sports organizations and clubs",
          provider: {
            "@type": "Organization",
            name: "Total Sports Group",
          },
        },
      },
    ],
  })}
/>
