  >
    <!-- Card 1 -->
    <a href="/experiences" class="block">
      <div
        class="relative shrink-0 w-[400px] h-[424px] lg:w-[500px] lg:h-[540px] bg-white/5 -ml-6 hover:bg-[#1E231C] transition-all duration-300 group"
        style="clip-path: polygon(7% 0, 100% 0, 93% 100%, 0% 100%);"
      >
        <div
          class="absolute left-7 bottom-3 z-10 text-[#f3f5f2] text-3xl lg:text-4xl leading-none font-titling uppercase w-[50%]"
        >
          Sports experiences
        </div>
        <div
          class="w-[400px] h-[350px] lg:w-[504px] lg:h-[450px] overflow-hidden z-0 p-6"
        >
